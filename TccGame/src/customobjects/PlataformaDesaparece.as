package customobjects {		import flash.utils.setTimeout;		import Box2D.Dynamics.Contacts.b2Contact;		import citrus.objects.platformer.box2d.Platform;	import citrus.physics.box2d.Box2DUtils;		import remake.MyNewHero;
			public class PlataformaDesaparece extends Platform {				private var sprite:String;		public var tempo:int;				public function PlataformaDesaparece(name:String, params:Object) {			params.view = sprite;			super(name, params);								}		override public function handleBeginContact(contact:b2Contact):void{			var obj:* = Box2DUtils.CollisionGetOther(this,contact);						if(obj is MyNewHero){				DestroyObjectIn(tempo);			}		}		public function DestroyObjectIn(time):void{			setTimeout(function(){this.kill = true;}, time);						//todo play na animacao de destroindo		}	}	}